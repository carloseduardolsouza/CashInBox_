{
  "name": "CashInBox",
  "version": "0.0.1",
  "main": "main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "cd FrontEnd && npm install && npm run build",
    "react-build": "react-scripts build",
    "preelectron-build": "copy node_modules\\electron\\dist\\ffmpeg.dll .",
    "electron-build": "npm run preelectron-build && electron-builder",
     "package": "electron-packager . MeuApp --platform=win32 --arch=x64 --out=dist"
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "electron-is-dev": "^3.0.1",
    "electron-updater": "^6.6.2"
  },
  "build": {
    "appId": "com.carloseduardolsouza.cashinbox",
    "productName": "CashInBox",
    "asar": false,
    "directories": {
      "buildResources": "public",
      "output": "dist"
    },
    "files": [
      "FrontEnd/build/**/*",
      "BackEnd/**/*",
      "main/**/*",
      "ffmpeg.dll",
      "package.json",
      "!**/*.sqlite",
      "!uploads/**"
    ],
    "extraResources": [
      {
        "from": "backend/",
        "to": "backend/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "carloseduardolsouza",
      "repo": "PontoDeVenda-Sytem2.0",
      "releaseType": "draft"
    }
  }
}
