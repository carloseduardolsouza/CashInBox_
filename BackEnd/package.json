{
  "name": "cashinbox-backend",
  "version": "1.0.0",
  "description": "Backend da aplicação CashInBox usando Node.js, SQLite e Electron.",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "electron-builder"
  },
  "author": "Carlos Eduardo",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.2",
    "natural": "^6.10.4",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "electron": "^26.2.0",
    "electron-builder": "^24.3.0",
    "nodemon": "^3.0.2"
  },
  "build": {
    "appId": "com.carlos.cashinbox",
    "productName": "CashInBox",
    "files": [
      "src/**/*",
      "migrations/**/*",
      "database.sqlite",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "migrations/",
        "to": "migrations",
        "filter": ["**/*"]
      },
      {
        "from": "database.sqlite",
        "to": "database.sqlite"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    }
  }
}
